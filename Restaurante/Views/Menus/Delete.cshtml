@model Restaurante.Models.Menu

@{
    ViewBag.Title = "Deletar";
}

<h2>Deletar</h2>
<h4>Prato</h4>
<h3>Você realmente deseja deletar este prato?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Restaurante
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Restaurant.Name)
        </dd>

        <dt>
            Prato
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Preço
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Preco)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Deletar" class="btn btn-default" /> 
        @Html.ActionLink("Voltar", "Index", new { id = "voltar" }, new { @class = "btn btn-default" })
    </div>
    }
</div>
